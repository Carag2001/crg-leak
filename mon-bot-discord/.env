# ===================================
# CONFIGURATION BOT DISCORD
# ===================================

# Token du bot Discord (OBLIGATOIRE)
DISCORD_TOKEN=VOTRE_TOKEN_ICI

# ID de votre serveur Discord principal
GUILD_ID=VOTRE_GUILD_ID_ICI

# ID du propriétaire du bot (votre ID Discord)
OWNER_ID=VOTRE_USER_ID_ICI

# ===================================
# BASE DE DONNÉES MONGODB
# ===================================

# URL de connexion MongoDB (OBLIGATOIRE)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/botdiscord

# ===================================
# DASHBOARD WEB
# ===================================

# Port du dashboard (par défaut 3000)
DASHBOARD_PORT=3000

# URL du bot pour OAuth2
BOT_URL=http://localhost:3000

# Client ID Discord (pour OAuth2)
CLIENT_ID=VOTRE_CLIENT_ID_ICI

# Client Secret Discord (pour OAuth2)
CLIENT_SECRET=VOTRE_CLIENT_SECRET_ICI

# Session secret (générez une chaîne aléatoire)
SESSION_SECRET=VOTRE_SESSION_SECRET_ALEATOIRE

# ===================================
# API KEYS (OPTIONNELS)
# ===================================

# Genius API pour les paroles (optionnel)
GENIUS_API_KEY=VOTRE_GENIUS_API_KEY

# Spotify API (optionnel)
SPOTIFY_CLIENT_ID=VOTRE_SPOTIFY_CLIENT_ID
SPOTIFY_CLIENT_SECRET=VOTRE_SPOTIFY_CLIENT_SECRET

# ===================================
# CONFIGURATION LOGS
# ===================================

# Activer les logs détaillés (true/false)
DEBUG_MODE=true
